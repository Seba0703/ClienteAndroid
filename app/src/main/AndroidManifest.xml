<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sebastian.copastock">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="android.permission.FLASHLIGHT"
        android:permissionGroup="android.permission-group.HARDWARE_CONTROLS"
        android:protectionLevel="normal" />

    <application
        android:name=".application.CopaStock"
        android:allowBackup="true"
        android:icon="@drawable/virgensola"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChooseModelActivity"
            android:label="@string/title_activity_choose_model"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProductLessActivity"
            android:label="@string/title_activity_product_less"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FurnatureActivity"
            android:label="@string/title_activity_furnature"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FurnitureInfoActivity"
            android:label="@string/title_activity_furniture_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ConfigActivity"></activity>
    </application>

</manifest>