<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sebastian.copastock.FurnatureActivity"
    android:id="@+id/furnatureRelative"
    tools:showIn="@layout/activity_furnature">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Desactualizados?"
        android:id="@+id/button6"
        android:drawableLeft="@drawable/outdated"
        android:drawableStart="@drawable/outdated"
        android:onClick="goCount"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escanear"
        android:id="@+id/button9"
        android:drawableLeft="@drawable/qr_scan"
        android:drawableStart="@drawable/qr_scan"
        android:onClick="goScan"
        android:layout_above="@+id/button6"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Luz? Suba o baje el volumen."
        android:id="@+id/textView6"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
